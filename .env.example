# Environment Variables
# Copy this file to .env and modify as needed
# For production deployment, set these values in your hosting provider's dashboard

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# Authentication - For Production
# When deploying to production, update these URLs to your production domain
BETTER_AUTH_SECRET=your_very_secure_secret_key_here_must_be_at_least_32_chars
BETTER_AUTH_URL=https://restoran-rz.netlify.app
NEXT_PUBLIC_BETTER_AUTH_URL=https://restoran-rz.netlify.app
NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=your_very_secure_secret_key_here_must_be_at_least_32_chars

# For Development
# BETTER_AUTH_URL=http://localhost:3000
# NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000